<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Demo Web App</display-name>

	<servlet>
		<servlet-name>AlertServlet</servlet-name>
		<display-name>AlertServlet</display-name>
		<description>Set alert</description>
		<servlet-class>com.test.servlet.AlertServlet</servlet-class>
		<!--Un-comment  below line if you want to instantiate and initialize the servlet during the servlet-container(tomcat) startup-->
		<!-- <load-on-startup>1</load-on-startup> -->
	</servlet>

	<servlet-mapping>
		<servlet-name>AlertServlet</servlet-name>
		<url-pattern>/alert</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>RequestAlertsServlet</servlet-name>
		<display-name>RequestAlertsServlet</display-name>
		<description>Retrieve alerts</description>
		<servlet-class>com.test.servlet.RequestAlertsServlet</servlet-class>
		<!--Un-comment  below line if you want to instantiate and initialize the servlet during the servlet-container(tomcat) startup-->
		<!-- <load-on-startup>1</load-on-startup> -->
	</servlet>

	<servlet-mapping>
		<servlet-name>RequestAlertsServlet</servlet-name>
		<url-pattern>/get-alerts</url-pattern>
	</servlet-mapping>

</web-app>
